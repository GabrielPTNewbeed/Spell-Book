# Variáveis de Ambiente - Grimório Mágico API

# Modo de Debug
DEBUG=True

# Configurações de Banco de Dados
# Para SQLite (desenvolvimento):
DATABASE_URL=sqlite:///./grimorio.db

# Para PostgreSQL (produção):
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/grimorio

# Segurança
SECRET_KEY=sua-chave-secreta-bem-segura-aqui-mude-em-producao-123456789

# Configurações de API
API_VERSION=2.0.0

# CORS - Domínios permitidos
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Backup
BACKUP_ENABLED=True
BACKUP_DIR=backups
